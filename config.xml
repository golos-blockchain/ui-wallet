<?xml version='1.0' encoding='utf-8'?>
<widget id="gls.wallet" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GOLOS Кошелек</name>
    <description>Удобный кошелек, обменник, внутренняя биржа токенов на блокчейне Golos.</description>
    <content src="/" />
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <icon src="res/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon-xhdpi.png" density="xhdpi" />
        <icon src="res/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon-xxxhdpi.png" density="xxxhdpi" />

        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon-splash.png" />

        <resource-file src="res/wlt_setting.png" target="app/src/main/res/drawable/wlt_setting.png" />
    </platform>
</widget>