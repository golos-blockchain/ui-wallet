<?xml version='1.0' encoding='utf-8'?>
<widget id="gls.wallet" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GOLOS Кошелек</name>
    <description>Удобный кошелек, обменник, внутренняя биржа токенов на блокчейне Golos.</description>
    <content src="/" />
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="SplashScreenSpinnerColor" value="#37a5ff" />
    </platform>
</widget>